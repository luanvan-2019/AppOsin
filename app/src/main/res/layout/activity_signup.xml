<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="25"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:background="#258BD0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="NestedWeights">
        </LinearLayout>
        <LinearLayout
            android:background="#8ABE41"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#03A9F4"
            android:id="@+id/label_signup"
            android:text="ĐĂNG KÝ TÀI KHOẢN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_weight="19"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/label_fullname"
            android:text="HỌ VÀ TÊN"
            android:textColor="#258BD0"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/input_fullname"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_below="@+id/label_fullname"
            android:textColor="#FF258BD0"
            android:inputType="text"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_account_circle_black_24dp" />
        <TextView
            android:id="@+id/label_phone_num"
            android:text="SỐ ĐIỆN THOẠI"
            android:textColor="#258BD0"
            android:textStyle="bold"
            android:layout_below="@id/input_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/input_phone_num"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:layout_below="@+id/label_phone_num"
            android:maxLength="11"
            android:inputType="number"
            android:textColor="#FF258BD0"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            tools:ignore="TextFields" />
        <TextView
            android:id="@+id/label_pass"
            android:text="@string/m_t_kh_u"
            android:textColor="#258BD0"
            android:textStyle="bold"
            android:layout_below="@+id/input_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_pass_sign"
            android:textColor="#FF258BD0"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
            android:drawableLeft="@drawable/ic_fingerprint_black_24dp"
            android:layout_below="@+id/label_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:drawableStart="@drawable/ic_fingerprint_black_24dp" />
        <TextView
            android:id="@+id/label_replay_pass"
            android:text="NHẬP LẠI MẬT KHẨU"
            android:textColor="#258BD0"
            android:textStyle="bold"
            android:layout_below="@+id/input_pass_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_replay_pass"
            android:textColor="#FF258BD0"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
            android:drawableLeft="@drawable/ic_fingerprint_black_24dp"
            android:layout_below="@+id/label_replay_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:drawableStart="@drawable/ic_fingerprint_black_24dp" />
        <Button
            android:id="@+id/btn_signup"
            android:text="TẠO TÀI KHOẢN"
            android:textColor="#ffffff"
            android:background="@drawable/bg_ui"
            android:layout_below="@+id/input_replay_pass"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center"
            android:layout_below="@id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_chuaDK"
                android:textColor="#FF258BD0"
                android:text="Đã có tài khoản?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_login"
                android:textColor="#5AE029"
                android:text="  Đăng nhập"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>